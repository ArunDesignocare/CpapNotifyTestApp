<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingVertical="20dp">

    <ProgressBar
        android:id="@+id/processing_progressBar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:backgroundTint="@color/blue01"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/processing_text"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/processing_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/poppins"
        android:text="Loading, Please Wait..."
        android:textColor="@color/grey_01"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/processing_progressBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/processing_progressBar"
        app:layout_constraintTop_toTopOf="@id/processing_progressBar" />


</androidx.constraintlayout.widget.ConstraintLayout>